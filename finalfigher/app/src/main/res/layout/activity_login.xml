<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.shixin.finalfigher.Activity.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_login"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       />
    <EditText
        android:id="@+id/username_editText_login"
        android:layout_below="@+id/toolbar_login"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="6dp"
        android:hint="输入账号" />

    <EditText
        android:id="@+id/password_editText_login"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_editText_login"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        android:layout_marginBottom="6dp"
        android:hint="输入密码" />
    <Button
        android:id="@+id/login_button"
        android:text="登陆"
        android:layout_below="@+id/password_editText_login"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/forgetpassword_textview"
        android:text="忘记密码"
        android:layout_below="@+id/login_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/register_textview_login"
        android:text="还没有账号?点我注册"
        android:layout_below="@+id/forgetpassword_textview"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"
        android:textColor="#f00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
