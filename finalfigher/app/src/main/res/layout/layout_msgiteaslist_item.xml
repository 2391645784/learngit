<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avater_img_MsgIdeas"
        android:layout_margin="6dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/avatar_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/title_tv_MsgIdeas"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp"
        android:text="标题"
        android:layout_toRightOf="@+id/avater_img_MsgIdeas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/content_tv_MsgIdeas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv_MsgIdeas"
        android:layout_alignLeft="@+id/title_tv_MsgIdeas"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_marginRight="3dp"
        android:text="内容"/>
    <TextView
        android:id="@+id/author_tv_MsgIdeas"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/title_tv_MsgIdeas"
        android:layout_below="@+id/content_tv_MsgIdeas"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"/>
</RelativeLayout>