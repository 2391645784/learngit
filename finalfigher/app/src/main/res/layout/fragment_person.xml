<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6f9"
    android:orientation="vertical"
    tools:context="com.shixin.finalfigher.fragment.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/bing_img"
            android:layout_width="match_parent"
            android:layout_height="220dp"

            />

        <ImageView
            android:id="@+id/avter_img_person"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/shirokuma" />

        <TextView
            android:id="@+id/infoLogin_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avter_img_person"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:text="点击头像进行登陆"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/favorite_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/favor_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:padding="12dp"
                    android:src="@drawable/favorite_press" />

                <TextView
                    android:id="@+id/myFavorite_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/favor_img"
                    android:text="我的收藏"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#f7f7f7" />

            <RelativeLayout
                android:id="@+id/opensource_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/opensource_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:padding="12dp"
                    android:src="@drawable/xieyi" />

                <TextView
                    android:id="@+id/opensource_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/opensource_img"
                    android:text="开源许可"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#f7f7f7" />

            <RelativeLayout
                android:id="@+id/setting_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/setting_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:padding="12dp"
                    android:src="@drawable/setting" />

                <TextView
                    android:id="@+id/setting_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/setting_img"
                    android:text="设置"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#f7f7f7" />

            <TextView
                android:id="@+id/exitLogin_textView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="退出登陆"
                android:textColor="#f00"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:text="copyright all rights reserved" />
</LinearLayout>
